{
  "variables": {
    "version": ""
  },
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "setup.sh"
    },
    {
      "type": "ansible-local",
      "playbook_file": "../shared/ansible/packer_main.yml",
      "galaxy_file": "../shared/ansible/packer_requirements.yml"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "cleanup.sh"
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<up><wait><tab><wait> text inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/kickstarter.cfg<enter><wait5>"
      ],
      "http_port_min": "8000",
      "http_port_max": "8000",
      "boot_wait": "4s",
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "iso_checksum": "sha256:48f955712454c32718dcde858dea5aca574376a1d7a4b0ed6908ac0b85597811",
      "iso_urls": [
          "rhel-8.4-x86_64-dvd.iso"
      ],
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "headless": true,
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "2048"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "4"
        ]
      ]
    }
  ],
  "post-processors": [
  [
    {
      "output": "builds/{{.Provider}}-rhel8.box",
      "type": "vagrant"
    }
  ]
]
}
